<% if ( postPageJson.post.post_authorslug == "myupchar"){%>
<style type="text/css">
   .commonBtn{
  padding: 10px 30px;
  border-radius: 30px;
  background: #00A0A3;
  color: white;
  border:none;
  cursor: pointer;
  font-size: 18px;
  margin: 0 auto 10px;
  display: inherit;
  border:#00A0A3 solid 2px;
  -webkit-transition: all 500ms ease;
-moz-transition: all 500ms ease;
-ms-transition: all 500ms ease;
-o-transition: all 500ms ease;
transition: all 500ms ease;
outline: 0;
}
.commonBtn:hover{
  background: white;
  color: #00A0A3;
  -webkit-transition: all 500ms ease;
-moz-transition: all 500ms ease;
-ms-transition: all 500ms ease;
-o-transition: all 500ms ease;
transition: all 500ms ease;
}
.desCription{
  font-size: 18px;
  font-family: 'Open sans', sans-serif;
  margin: 15px 0;
}
.desc-css{ line-height: 25px; font-family: Arial, Helvetica, sans-serif; }
.disclaimer{ margin: 10px auto 30px; }
.clear-it{clear: both;}
@media (max-width: 768px){
  .desc-css{ margin: 0 10px; }
}
</style>
<script type="text/javascript">
    function disc(obj)  
